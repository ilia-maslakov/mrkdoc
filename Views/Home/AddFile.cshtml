@model IEnumerable<mrkdoc.Models.ContentMD>
@{
    ViewData["Title"] = "Добавление файла";
}
<style>
    .table {
        margin-bottom: 0;
        border: none;
    }

    .table thead th {
        border-bottom: none;
        border-top: none;
    }
</style>
<form id="AddFile" asp-action="AddFile" asp-controller="Home" asp-route-dirname="@ViewData["DirName"]" asp-route-filename="@ViewData["FileName"]" asp-route-filetype="@ViewData["FileType"]" method="post" enctype="multipart/form-data" accept="image/*">
    <div class="row">
        <div class="col-md-12 custom-file border border-secondary rounded" style="background-image: url(/assets/files.svg); background-position: center center; background-repeat: no-repeat; background-color:whitesmoke; height:200px">
            <input type="file" class="custom-file-input" id="customFile" name="uploadedFile" multiple aria-label="выберите с диска" style="height:100%">
            <label class="custom-file-label" for="customFile" style="background-color:transparent;border-style:none;text-align:center;font-size:16px;font-weight:600;height:100%;" data-browse="выберите с диска">Перетащить файлы или</label>
        </div>
        <input type="submit" class="btn btn-primary btn-sm" style="margin:20px" value="Загрузить выбранные файлы" />
    </div>
</form>
<div class="card">
    <table class="table table-sm table-striped" id="ftable">
        <thead>
            <tr>
                <th>
                    Имя
                </th>
                <th>
                    Размер
                </th>
                <th>
                    Тип
                </th>
            </tr>
        </thead>
        <tbody id="fbody">
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/addfiles.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}